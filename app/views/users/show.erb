<div id='user_dashboard'>
  <h1>Dashboard</h1>
    <div id='profile'>
      <h2><%= @user.name %></h2>
      <h3>My Decks</h3>
      <ul>
      <% @user.decks.each do |deck| %>
        <li class='user_attributes'><a href='deck/<%= deck.id %>'><%= deck.topic %></a></li>
      <% end %>
      </ul>
      <h3>My Stats</h3>
      <ul>
        <li><a href='#'>Stat 1</a></li>
      </ul>
    </div>
    <div id='play_form'>
      <h3>Play a deck!</h3>
    </div>
</div>

